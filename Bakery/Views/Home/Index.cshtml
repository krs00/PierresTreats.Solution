@{
  Layout = "_Layout";
}

@using Bakery.Models;

<h1>🍞Welcome to Pierre's Bakery!🍞</h1>
<br>
<h2>🍪Pierre's Bakery🎂 home of tasty treats and flavors!🍩</h2>

@if (User.Identity.IsAuthenticated)
{
  <br>
  <br>
  <h3>Hello @User.Identity.Name </h3>

  <br>
  <h3>@Html.ActionLink("View Treats", "Index", "Treats")</h3>
  <br>
  <h3>@Html.ActionLink("View Flavors", "Index", "Flavors")</h3>
  <br>
  <br>
  <br>
  <h3>@Html.ActionLink("Log out", "Index", "Account")</h3>
  <br>
  <hr> // DIVIDER IN PAGE
  <br>
  <h3>Treats:</h3>
   @if (Model["treats"].Length == 0)
  {
    <p>No treats have been added yet!</p>
  } 
  <ul>
    @foreach (Treat treat in Model["treats"])
    {
      <li>@Html.ActionLink(@treat.Name, "Details", "Treats", new { id = @treat.TreatId})</li>
    }
  </ul>
  <br>
  <br>
   <h3>Flavors:</h3>
   @if (Model["flavors"].Length == 0)
  {
    <p>No flavors have been added yet!</p>
  } 
  <ul>
    @foreach (Flavor flavor in Model["flavors"])
    {
      <li>@Html.ActionLink(@flavor.Name, "Details", "Flavors", new { id = @flavor.FlavorId})</li>
    }
  </ul>
  
}
else
{
  <br>
  <br>
  <h3>Please @Html.ActionLink("log in", "Login", "Account") to add treats and flavors!</h3>
  <br>
  <h3>Or</h3>
  <br>
  <h3>Click @Html.ActionLink("here", "Register", "Account") to register!</h3>
}